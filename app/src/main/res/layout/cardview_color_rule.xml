<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView
    android:id="@+id/card_view"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/margin_3xs"
    card_view:cardBackgroundColor="@color/white"
    android:layout_marginLeft="@dimen/margin_m"
    android:layout_marginRight="@dimen/margin_m"
    card_view:cardCornerRadius="@dimen/radius_card_view"
    android:foreground="?attr/selectableItemBackground">

    <LinearLayout
        android:id="@+id/ll_prom_tracker"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_ccr_left_line"
            android:layout_width="@dimen/width_cpt_iv"
            android:layout_height="match_parent"
            android:background="@color/brand_second_color"/>
        <TextView
            android:id="@+id/tv_ccr_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin_4xs"/>

    </LinearLayout>

</android.support.v7.widget.CardView>