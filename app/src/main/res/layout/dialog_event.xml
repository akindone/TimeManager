<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/font_3xs"
            android:text="标题"/>
        <EditText
            android:id="@+id/tv_de_title"
            android:layout_width="@dimen/size_0"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:hint="标题"
            android:enabled="false"
            android:textStyle="bold"
            android:textSize="@dimen/font_3xs"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/font_3xs"
            android:text="属性"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <Spinner
                android:id="@+id/sp_de_predict"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <Spinner
                android:id="@+id/sp_de_importance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <Spinner
                android:id="@+id/sp_de_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/font_3xs"
            android:text="描述"/>
        <EditText
            android:id="@+id/tv_de_detail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="请做个具体描述吧！"
            android:enabled="false"
            android:textSize="@dimen/font_3xs"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/font_3xs"
            android:text="耗时"/>
        <EditText
            android:id="@+id/tv_de_duration"
            android:layout_width="@dimen/size_0"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:enabled="false"
            android:textSize="@dimen/font_3xs"/>
        <Button
            android:id="@+id/btn_de_cal_duration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="计算耗时"
            android:visibility="gone"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/font_3xs"
            android:text="开始于"/>
        <EditText
            android:id="@+id/tv_de_start"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:enabled="false"
            android:textSize="@dimen/font_3xs"
            android:hint="日期格式：yyyy-MM-dd hh:mm:ss"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/font_3xs"
            android:text="结束于"/>

        <EditText
            android:id="@+id/tv_de_end"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:enabled="false"
            android:textSize="@dimen/font_3xs"
            android:text="日期格式：yyyy-MM-dd hh:mm:ss"/>
    </LinearLayout>



</LinearLayout>